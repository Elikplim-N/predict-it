{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "api/auth.py"
    },
    {
      "src": "/api/submit",
      "dest": "api/submit.py"
    },
    {
      "src": "/api/submissions",
      "dest": "api/submit.py"
    },
    {
      "src": "/api/admin/(.*)",
      "dest": "api/admin.py"
    }
  ],
  "env": {
    "SUPABASE_URL": "@supabase-url",
    "SUPABASE_KEY": "@supabase-key",
    "SECRET_KEY": "@secret-key"
  }
}
